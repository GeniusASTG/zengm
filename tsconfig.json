{
	"compilerOptions": {
		"target": "esnext",
		"resolveJsonModule": true,
		"jsx": "react-jsx",
		"rootDirs": ["./src", "./tools"],
		"noEmit": true,
		"noUnusedLocals": true,
		"noFallthroughCasesInSwitch": true,
		"moduleResolution": "node",
		"baseUrl": ".",
		"paths": {
			"league-schema": ["build/files/league-schema.json"],
			"bbgm-polyfills": ["src/common/polyfills-modern.ts"],
			"bbgm-debug": ["src/worker/core/debug/index.ts"]
		},
		"esModuleInterop": true,
		"strict": true,
		"useUnknownInCatchVariables": false,
		"importsNotUsedAsValues": "error",
		"module": "esnext"
	}
}
